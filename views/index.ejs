<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6">
      <img src="/images/hero-image.png" width="607" height="510" class="d-block mx-lg-auto img-fluid">
    </div>
  
    <div class="col-12 col-lg-6">
      <h1>Your one stop destination for Authentic Telugu Recipes</h1>
      <p class="lead">
        Never worry about what to prepare, we've got your covered! <br>
        Explore our wide range of scumptious recipes you can prepare with detailed how-to and list of ingredients
      </p>
  
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a href="#latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Explore Latest Recipes</a>
        <a href="/submit-recipe" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Add Yours</a>
      </div>
  
    </div>
  
  </div>

  <!-- Categories Start -->

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">

  <% if(categories != "") { %>
    <% categories.forEach(category => { %>
      <a href="/categories/<%= category.name %>" class="col text-center category__link">
        <div class="category__img shadow">
          <img src="/images/<%-category.image%>" alt="<%- category.name %>">
        </div>
        <div class="pt-1"> <%- category.name %> </div>
      </a>
    <% }) %>
  <% } %>

  <a href="/categories" class="col text-center category__link">
    <div class="category__img shadow">
      <img src="/images/all.png" alt="">
    </div>
    <div class="pt-1"> View All </div>
  </a>
</div>
<!-- Categories End -->

<!-- Latest Start-->
<section class="pb-4 pt-4" id="latest">
  <div class="d-flex mb-2 align-items-center">
    <h2>Latest Recipes</h2>
    <!-- <a href="/explore-latest" class="ms-auto">View More</a> -->
  </div>
  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(food != "") { %>
      <% food.latest.forEach(recipe => { %>
        <a href="/recipes/<%= recipe.id %>" class="col text-center category__link">
          <div class="category__img category__img--large shadow">
            <img src="images/uploads/<%= recipe.image %>" alt="<%= recipe.name %>">
          </div>
          <div class="pt-1"><%= recipe.name %></div>
        </a>
      <% }) %>
    <% } %>
  </div>
</section>
<!-- Latest End-->

<!-- Submit - Start -->
<section class="px-4 py-5 my-5 text-center">
  <img src="/images/publish.png" class="d-block mx-auto mb-4 img-fluid" alt="Publish your recipe for FREE today" width="566" height="208" loading="lazy">
  <h1 class="display-5 fw-bold">Publish YOUR recipe</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">Made a dish and it tastes goooood? Share it with the world NOW!</p>
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
      <a href="/submit-recipe" class="btn btn-primary btn-dark btn-lg">Submit Recipe</a>
    </div>
  </div>
</section>
 
<!-- Submit - End -->